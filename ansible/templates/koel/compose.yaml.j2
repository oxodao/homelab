services:
  app:
    image: 'phanan/koel'
    depends_on:
      - database
    ports:
      - '8000:80'
    environment:
      DB_CONNECTION: 'pgsql'
      DB_HOST: 'database'
      DB_PORT: '5432'
      DB_USERNAME: 'koel'
      DB_PASSWORD: 'koel'
      DB_DATABASE: 'koel'
    volumes:
      - '/mnt/music/{{'test/' if debug_in_vm is defined and debug_in_vm else ''}}medias:/music'
      - '/mnt/music/{{'test/' if debug_in_vm is defined and debug_in_vm else ''}}covers:/var/www/html/public/img/covers'
      - './search_index:/var/www/html/storage/search-indexes'

  database:
    image: 'postgres:16'
    volumes:
      - './pg_data:/var/lib/postgresql/data'
    environment:
      POSTGRES_DB: 'koel'
      POSTGRES_USER: 'koel'
      POSTGRES_PASSWORD: 'koel'